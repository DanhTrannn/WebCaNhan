package com.baitap2.Service;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;

import com.baitap2.model.User;

public class UserService {
	public static void add(User user, String filePath) {
        File file = new File(filePath);
        try (PrintWriter out = new PrintWriter(new FileWriter(file, true))) {
            out.println(user.getEmail() + "," + user.getFirstName() + "," + user.getLastName());
        } catch (IOException e) {
            throw new RuntimeException("Unable to write to " + filePath, e);
        }
    }
}
